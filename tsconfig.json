{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                  // 使用 ESM 模組
    "moduleResolution": "NodeNext",      // 搭配 ES 模組解析
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist"                   // 編譯後輸出資料夾（可選）
  },
  "include": ["./src", "./generate.mts"] // 你自己的檔案路徑
}
